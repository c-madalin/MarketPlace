<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/button_primary_selector</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="backgroundTint">@null</item>
        <item name="rippleColor">@android:color/white</item>
    </style>

    <style name="Button.Secondary" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:background">@drawable/button_secondary_selector</item>
        <item name="android:textColor">@color/button_secondary_text_color</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="backgroundTint">@null</item>
        <item name="rippleColor">@android:color/white</item>
    </style>
</resources> 